{
    "description": "Right Option → 한자key, Right Command + any key → 무효화",
    "manipulators": [
        {
            "description": "오른쪽 옵션키로 한자 입력",
            "from": {
                "key_code": "right_option",
                "modifiers": { "optional": ["any"] }
            },
            "to": [
                {
                    "key_code": "spacebar",
                    "modifiers": ["left_control", "left_option"]
                }
            ],
            "type": "basic"
        },
        {
            "description": "오른쪽 커맨드 + 모든 키 무효화",
            "from": {
                "any": "key_code",
                "modifiers": { "mandatory": ["right_command"] }
            },
            "to": [{ "key_code": "vk_none" }],
            "type": "basic"
        }
    ]
}
